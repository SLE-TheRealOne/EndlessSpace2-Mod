    <StarSystemImprovementDefinition Name="InflationReductor_1" SubCategory="SubCategoryDust" ScoreProvider="StarSystemImprovementBuilt">
        <SupervisorGain Name="Dust" />
        <Cost ResourceName="SystemProduction">1560</Cost>
        <Cost ResourceName="Strategic1" Instant="true">50</Cost>
        <Cost ResourceName="Strategic2" Instant="true">50</Cost>
        <!-- Ne peut être construit qu'une fois par empire -->
        <QueuedSimulationDescriptorReference Name="InflationReductor_1_unicity"/>
        <InterpreterPrerequisite Inverted="true" Flags="Prerequisite,Discard">Path(Context,@'../ClassEmpire/ClassStarSystem,InflationReductor_1_unicity') and not(Path(Context,@'ClassStarSystem,InflationReductor_1_unicity'))</InterpreterPrerequisite>
        <!-- Ne peut être construit qu'une fois par système -->
        <PathPrerequisite                   Flags="Prerequisite,Discard">ColonizedStarSystemStateColony</PathPrerequisite>
        <PathPrerequisite Inverted="true"   Flags="Prerequisite,Discard">ClassColonizedStarSystem/InflationReductor_1,!FastForwardedImprovement</PathPrerequisite>
        <!-- Débloqué par la technologie -->
        <TechnologyPrerequisite Flags="Prerequisite,Discard,Technology">InflationReductionTechnology_1</TechnologyPrerequisite>
        <!-- Custom effect -->
        <SimulationDescriptorReference Name="InflationReductor_1" />
        <!-- Dust building -->
        <SimulationDescriptorReference Name="DustBuilding" />
        <!-- Dust upkeep -->
        <SimulationDescriptorReference Name="StarSystemImprovementUpkeepStage1Weak" />
        <!-- Ne peut être construit qu'une fois -->
        <SimulationDescriptorReference Name="StarSystemImprovementOncePerEmpire" />
        <!-- Effet sur la population -->
        <PopulationEvent Name="InflationReductorPopulationEvent"/>
    </StarSystemImprovementDefinition>

